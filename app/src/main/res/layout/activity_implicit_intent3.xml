<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ImplicitIntentActivity3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:gravity="center"
            android:hint="please enter web site address"
            android:id="@+id/edtBrowser"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Browse"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnBrws"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:gravity="center"
            android:hint="please enter call number"
            android:id="@+id/edtCall"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Call"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnCall"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:gravity="center"
            android:hint="please enter number"
            android:id="@+id/edtCallSms"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Send SMS"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnSms"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="30sp"
        android:gravity="center"
        android:hint="please enter SMS text"
        android:id="@+id/edtTextSms"/>


</LinearLayout>